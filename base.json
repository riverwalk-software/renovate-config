{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":disableRateLimiting",
    ":enableVulnerabilityAlertsWithLabel(urgent)",
    ":maintainLockFilesWeekly",
    ":reviewer(andreilgeorgescu)",
    ":separateMultipleMajorReleases",
    ":timezone(US/Eastern)",
    "group:vite"
  ],
  "addLabels": ["{{manager}}", "{{updateType}}"],
  "minimumReleaseAge": "14 days",
  "osvVulnerabilityAlerts": true,
  "rollbackPrs": true,
  "packageRules": [
    {
      "groupName": "Astro",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@astrojs/**", "astro", "sharp"]
    },
    {
      "groupName": "Better Auth",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@better-auth/**", "@polar-sh/**", "better-auth"]
    },
    {
      "groupName": "Effect",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@effect/**", "effect"]
    },
    {
      "groupName": "React",
      "matchDatasources": ["npm"],
      "matchPackageNames": [
        "@types/react-dom",
        "@types/react",
        "@vitejs/plugin-react",
        "babel-plugin-react-compiler",
        "react-dom",
        "react"
      ]
    },
    {
      "groupName": "shadcn",
      "matchDatasources": ["npm"],
      "matchPackageNames": [
        "@radix-ui/**",
        "class-variance-authority",
        "clsx",
        "lucide-react",
        "shadcn",
        "tailwind-merge",
        "tw-animate-css"
      ]
    },
    {
      "groupName": "SQLite",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@types/better-sqlite3", "better-sqlite3", "sqlite"]
    },
    {
      "groupName": "TypeScript",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["tsdown", "tsx", "typescript"]
    }
  ]
}
