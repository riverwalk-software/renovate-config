{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":disableRateLimiting",
    ":enableVulnerabilityAlertsWithLabel(urgent)",
    ":maintainLockFilesWeekly",
    ":reviewer(andreilgeorgescu)",
    ":separateMultipleMajorReleases",
    ":timezone(US/Eastern)",
    "schedule:earlyMondays",
    "group:vite"
  ],
  "addLabels": ["{{manager}}", "{{updateType}}"],
  "minimumReleaseAge": "14 days",
  "osvVulnerabilityAlerts": true,
  "rollbackPrs": true,
  "packageRules": [
    {
      "groupName": "Astro",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@astrojs/**", "astro", "sharp"]
    },
    {
      "groupName": "Better Auth",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@better-auth/**", "@polar-sh/**", "@types/better-sqlite3", "better-auth", "better-sqlite3", "kysely", "kysely-**", "sqlite"]
    },
    {
      "groupName": "Cloudflare",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@cloudflare/**", "wrangler"]
    },
    {
      "groupName": "Effect",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@effect/**", "effect"]
    },
    {
      "groupName": "Node",
      "matchDatasources": ["node-version", "npm"],
      "matchPackageNames": ["node", "@types/node"]
    },
    {
      "groupName": "React",
      "matchDatasources": ["npm"],
      "matchPackageNames": [
        "@types/react-dom",
        "@types/react",
        "@vitejs/plugin-react",
        "babel-plugin-react-compiler",
        "react-dom",
        "react"
      ]
    },
    {
      "groupName": "shadcn",
      "matchDatasources": ["npm"],
      "matchPackageNames": [
        "@radix-ui/**",
        "class-variance-authority",
        "clsx",
        "lucide-react",
        "shadcn",
        "sonner",
        "tailwind-merge",
        "tw-animate-css"
      ]
    },
    {
      "groupName": "Tailwind",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@tailwindcss/**", "tailwindcss"]
    },
    {
      "groupName": "TanStack Form",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@tanstack/react-form", "@tanstack/react-form-devtools"]
    },
    {
      "groupName": "TanStack Start",
      "matchDatasources": ["npm"],
      "matchPackageNames": [
        "@tanstack/devtools-vite",
        "@tanstack/react-devtools",
        "@tanstack/react-router",
        "@tanstack/react-router-devtools",
        "@tanstack/react-start"
      ],
      "minimumReleaseAge": "3 days"
    },
    {
      "groupName": "TanStack Query",
      "matchDatasources": ["npm"],
      "matchPackageNames": [
        "@tanstack/react-query",
        "@tanstack/react-query-devtools",
        "@tanstack/react-router-ssr-query"
      ]
    },
    {
      "groupName": "TypeScript",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["tsx", "typescript"]
    },
    {
      "groupName": "Uppy",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@uppy/**"]
    },
    {
      "groupName": "Vite",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["oxlint", "tsdown", "vite"]
    },
    {
      "groupName": "XState",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@xstate/**", "xstate"]
    },
    {
      "groupName": "zxcvbn-ts",
      "matchDatasources": ["npm"],
      "matchPackageNames": ["@zxcvbn-ts/**"]
    }
  ]
}
